# Production Environment Configuration
# Copy this to .env and update with your values

# Security Configuration
DEBUG=false
LOG_LEVEL=INFO
NODE_ENV=production

# Authentication
ENABLE_AUTHENTICATION=true
OAUTH2_CLIENT_ID=your_oauth2_client_id
OAUTH2_CLIENT_SECRET=your_oauth2_client_secret
JWT_SECRET=your_jwt_secret_min_32_chars
SESSION_SECRET=your_session_secret_min_32_chars
CORS_ORIGIN=https://yourdomain.com

# API Keys (never commit real keys!)
OPENAI_API_KEY=your_production_api_key
REDIS_PASSWORD=your_secure_redis_password
RABBITMQ_DEFAULT_USER=your_rabbitmq_user
RABBITMQ_DEFAULT_PASS=your_rabbitmq_password
OPENAI_MODEL=gpt-4o

# Security Hardening
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_REQUEST_CACHING=true
ENABLE_HTTPS_ONLY=true
DISABLE_TELEMETRY=false

# Performance Optimization
MAX_CONCURRENT_AGENTS=6
AGENT_TIMEOUT=1800
CACHE_TTL=7200

# Resource Limits
MEMORY_LIMIT_PER_AGENT=1g
CPU_LIMIT_PER_AGENT=1.0

# External Integrations
# Uncomment and configure as needed
# EXTERNAL_API_BASE_URL=https://your-api.example.com
# EXTERNAL_API_AUTH_TOKEN=your_external_api_token
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_WEBHOOK
# EMAIL_ALERTS_SMTP_HOST=smtp.example.com
# EMAIL_ALERTS_SMTP_PORT=587